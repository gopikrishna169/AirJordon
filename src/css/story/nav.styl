nav
  z-index set-index(overlay)
  overflow hidden
  width 100%
  margin 0 auto 1rem auto
  position sticky
  padding 0 1rem
  &:after
    position absolute
    bottom 0
    display block
    content ''
    width 100%
    height 100%
    z-index 100
    pointer-events none
    right -80%
    +mq('bp-4')
    	right -70%
    +mq('bp-6')
      background none
    &:before
      position absolute
      bottom 0
      display block
      content ''
      width 100%
      height 100%
      z-index 100
      pointer-events none
      left -80%
      +mq('bp-4')
      	right -50%
      +mq('bp-6')
        background none
  ul
    display flex
    flex-direction row
    height 7rem
    li
      display flex
      flex-direction column
      width 8rem
      padding 0.5rem 0.25rem 0 0.25rem
      height auto
      align-items: center
      //margin 0 0.25rem
      transition 300ms
      min-width 5rem
      cursor: pointer

      &.is-active
        border-bottom 3px solid darken(#4729fc, 20)
        transition 300ms
				opacity 1

			.not-selected
				opacity 0.2
				transform scale(0.75)
				transition 300ms

      .image
        margin 0 auto
        width 80%
        max-height 3rem

			.object-name
				margin 1rem 0 0 0
				text-align center
				set-type-size('small', true)

		.is-active
			.image
				width auto
				max-height 3rem

			.object-name
				font-weight 700
