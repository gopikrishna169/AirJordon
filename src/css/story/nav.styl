nav
	z-index 999
	overflow hidden
	width 100%
	margin 0 auto 0 auto
	position sticky
	top 0rem
	padding 3.5rem 1rem 0 1rem
	&:after
		position absolute
		bottom 0
		display block
		content ''
		width 100%
		height 100%
		z-index 100
		pointer-events none
		right -80%
		+mq('bp-4')
			right -70%
		+mq('bp-6')
			background none
	&:before
		position absolute
		bottom 0
		display block
		content ''
		width 100%
		height 100%
		z-index 100
		pointer-events none
		left -80%
		+mq('bp-4')
			right -50%
		+mq('bp-6')
			background none

	ul
		display flex
		flex-direction row
		height 6.25rem
	li
		display flex
		flex-direction column
		width 8rem
		padding 0.5rem 0.25rem 0 0.25rem
		height auto
		align-items center
		transition 300ms
		min-width 5rem
		cursor pointer
		opacity 0.5
		transform scale(0.75)
		transition all 300ms
		user-select none

		&.is-active
			border-bottom 3px solid darken(#4729fc, 20)
			opacity 1
			transform scale(1)
			pointer-events none
		&:hover
			transform scale(1)

		.image
			margin 0 auto
			width 80%
			max-height 3rem

		.object-name
			margin 1rem 0 0 0
			text-align center
			set-type-size('small', true)

		.is-active
			.image
				width auto
				max-height 3rem

		.object-name
			font-weight 700

	.under-ul
		display flex
		justify-content space-between
		margin-top 1rem

		.nav-hint
			display flex

			svg
				margin 0.4rem 0 0 0.15rem

			p
				margin 0.5rem 0 0 0
				set-type-size('x-small', true)
				+mq('bp-3')
					set-type-size('small', true)

		.autoplay
			color $white
			text-transform uppercase
			background-color transparent
			font-family $atlas
			font-weight 700
			display flex
			justify-content space-between

			.play-pause
				height 30px
				width 30px
				background-color darken(#4729fc, 20)
				border-radius 50%
				padding 0.5rem
				margin 0.15rem 0 0 0
				+mq('bp-3')
					margin 0.15rem 0 0 0.5rem

			p
				margin 0.5rem 0 0 0
				width 3rem
				text-align left
				set-type-size('x-small', true)
				+mq('bp-3')
					set-type-size('small', true)
