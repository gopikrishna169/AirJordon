/* CUSTOM STORY STYLE */
body
  overflow hidden
  height 100vh

  #content
    width 100%
    height 100vh
    z-index 999
    padding-top 5rem

    .jordan
      max-width 960px
      margin 0 auto
      width 100%
      height 60%
      position relative
      display flex
      flex-direction column

      .shoe-wrapper

        .images

          .details-overlay
            position absolute
            width 100%
            opacity 0

        svg
          position absolute
          width 100%

          g
            display none

          #jordan1
            display block

          path
            opacity 1
            fill #000000

          #whiteGradient
            --color-stop-1 #FFFFFF
            --color-stop-2 #FCFCFC
            --color-stop-3 #F4F4F4 
            --color-stop-4 #E6E6E6 
            --color-stop-5 #E6E6E6  

          .st0
            fill white

          .st1
            fill #D81F28

          .st2
            fill #58595B
