/* CUSTOM STORY STYLE */
body
	overflow-x hidden
	
#content
	position relative
	margin-top -11rem

	.content-wrapper
		position relative
		padding 10rem 0 5rem 0

    .jordan
			max-width 800px
			margin 1rem auto
			width 100%
			padding 0 1rem
			//display flex
			//flex-direction column
			+mq('bp-3')
				margin -1rem auto 1rem auto
			+mq('bp-4')
				margin -4rem auto 1rem auto

		.shoe-wrapper
			display inline-block
			vertical-align middle
			max-width 960px
			width 100%
			position relative
			margin 0 auto
			padding 0 1rem

	.intro-text
		position absolute
		width 100%
		top 0
		&.is-hidden
			opacity 0
			visibility hidden
			transition visibility 200ms linear, opacity 200ms linear;
		+mq('bp-3')
			top 1rem
		+mq('bp-4')
			top 3rem
		+mq('bp-5')
			top 4rem

		p
			font-family $atlas
			text-align center
			color $white
			set-type-size('medium', true)
			+mq('bp-3')
				set-type-size('large', true)
			+mq('bp-5')
				set-type-size('x-large', true)

	.loading-text
		position absolute
		width 100%
		top 15rem
		&.is-hidden
			opacity 0
			visibility hidden
			transition visibility 200ms linear, opacity 200ms linear;
		+mq('bp-3')
			top 25rem
		+mq('bp-4')
			top 28rem
		+mq('bp-5')
			top 30rem

		p
			font-family $atlas
			text-align center
			color $white
			set-type-size('small', true)
			+mq('bp-4')
				set-type-size('medium', true)

			span
				set-type-size('medium', true)
				animation-name blink
				animation-duration 1.4s
				animation-iteration-count infinite
				animation-fill-mode both
				+mq('bp-4')
					set-type-size('large', true)

			span:nth-child(2)
				animation-delay .2s

			span:nth-child(3)
				animation-delay .4s

	.images
		.details-overlay
			position absolute
			width calc(100% - 1rem)
			opacity 0

	#shapes
		position absolute
		width calc(100% - 1rem)

		g
			display none

		#jordan0
			display block

		path
			opacity 1
			fill #000000

		#gradientWhite
			--color-stop-1 #FFFFFF
			--color-stop-2 #fbfbfb
			--color-stop-3 #f7f7f7
			--color-stop-4 #f2f2f2
			--color-stop-5 #efefef
			--color-stop-6 #e6e6e6
			--color-stop-7 #e6e6e6

		#gradientCosmos
			--color-stop-1 #000000
			--color-stop-2 #141414
			--color-stop-3 #444444
			--color-stop-4 #717171
			--color-stop-5 #979797
			--color-stop-6 #B7B7B7
			--color-stop-7 #D2D2D2
			--color-stop-8 #E6E6E6
			--color-stop-9 #F4F4F4
			--color-stop-10 #FCFCFC
			--color-stop-11 #FFFFFF

		#gradientRedBlack
			--color-stop-1 #D92226
			--color-stop-2 #C12A27
			--color-stop-3 #9D2F27
			--color-stop-4 #6F2C24
			--color-stop-5 #3E201C
			--color-stop-6 #180B0B
			--color-stop-7 #180B0B
			--color-stop-8 #180B0B
			--color-stop-9 #41211D
			--color-stop-10 #712C24
			--color-stop-11 #9E2F27
			--color-stop-12 #C22927
			--color-stop-13 #D92226
			--color-stop-14 #E31E26

		.st3
			fill #58595B

		.st4
			fill #414042

		.st5
			fill #E6E7E8

		.st7
			fill #E31E26

@keyframes blink {
    0% {
      opacity: .2;
    }
    20% {
      opacity: 1;
    }
    100% {
      opacity: .2;
    }
}
