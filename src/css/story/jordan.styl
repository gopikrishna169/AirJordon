/* CUSTOM STORY STYLE */
#content
  //position absolute
  width 100%
  z-index 999
  height 100vh
  margin-bottom 15rem

  .content-wrapper
    width 100%
    z-index 999
    position absolute
    margin-top 4rem

    .jordan
      max-width 960px
      margin -4rem auto 1rem auto
      width 100%
      padding 0 1rem
      display flex
      flex-direction column

      .shoe-wrapper
        display inline-block
        vertical-align middle
        max-width 960px
        width 100%
        position relative
        margin 0 auto
        padding 0 1rem

        .intro-text
          position absolute
          width 100%
          top 5rem
          &.is-hidden
            display none

          p
            font-family $atlas
            text-align center
            color $white
            set-type-size('x-large', true)

        .images

          .details-overlay
            position absolute
            width calc(100% - 1rem)
            opacity 0

        svg
          position absolute
          width calc(100% - 1rem)

          g
            display none

          #jordan0
            display block

          path
            opacity 1
            fill #000000

          #gradientWhite
            --color-stop-1 #FFFFFF
            --color-stop-2 #FCFCFC
            --color-stop-3 #F4F4F4
            --color-stop-4 #E6E6E6
            --color-stop-5 #E6E6E6

          #gradientCosmos
            --color-stop-1 #000000
            --color-stop-2 #141414
            --color-stop-3 #444444
            --color-stop-4 #717171
            --color-stop-5 #979797
            --color-stop-6 #B7B7B7
            --color-stop-7 #D2D2D2
            --color-stop-8 #E6E6E6
            --color-stop-9 #F4F4F4
            --color-stop-10 #FCFCFC
            --color-stop-11 #FFFFFF

          #gradientRedBlack
            --color-stop-1 #D92226
            --color-stop-2 #C12A27
            --color-stop-3 #9D2F27
            --color-stop-4 #6F2C24
            --color-stop-5 #3E201C
            --color-stop-6 #180B0B
            --color-stop-7 #180B0B
            --color-stop-8 #180B0B
            --color-stop-9 #41211D
            --color-stop-10 #712C24
            --color-stop-11 #9E2F27
            --color-stop-12 #C22927
            --color-stop-13 #D92226
            --color-stop-14 #E31E26

          .st3
            fill #58595B

          .st4
            fill #414042

          .st5
            fill #E6E7E8

          .st7
            fill #E31E26
