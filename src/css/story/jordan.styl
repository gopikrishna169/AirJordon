/* CUSTOM STORY STYLE */
.jordan
  max-width 960px
  margin 0 auto
  border 1px solid black
  width 100%
  position relative

  .details-overlay
    position absolute
    top -77px
    width 105%
    opacity 0

  .third
    left -37px
    top -71px

  svg
