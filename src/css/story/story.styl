/* CUSTOM STORY STYLE */
body
	background-color #4729fc
	color $white

	.skewed-bg
		background-color darken(#4729fc, 3)
		transform skew(0deg, -30deg)
		position absolute
		height 100vh
		width 100%
		z-index 1

	.number-bg
		position absolute
		height 100vh
		width 100%
		z-index 2

		.big-num
			font-size 50rem
			position relative
			top -25%
			right -2%
			letter-spacing -3rem
			padding 0
			text-align right
			font-family $raj
			color darken(#4729fc, 7)
